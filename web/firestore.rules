rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Root User Profile (Strictly Owner Only)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Private Subcollections (finance, tasks, health, etc.)
    match /users/{userId}/{subcollection}/{document=**} {
      // Allow ONLY OWNER to read/write their own sensitive data
      allow read, write: if isOwner(userId);
    }

    // Family Groups (Root Collection) - Restricted to members
    match /family_groups/{groupId} {
      // Allow reading if you are a member of the group
      allow read: if isAuthenticated() && request.auth.uid in resource.data.members;
      
      // Allow creation if you set yourself as owner
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow updates/deletion only by owner
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;

      // Subcollections under family groups (like ancestors or specific shared tasks)
      match /{allSubcollections=**} {
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/family_groups/$(groupId)).data.members;
        allow write: if isAuthenticated() && request.auth.uid == get(/databases/$(database)/documents/family_groups/$(groupId)).data.ownerId;
      }
    }
    
    // Default deny for anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
