rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Root User Profile (Strictly Owner Only + Field Validation)
    match /users/{userId} {
      allow read: if isOwner(userId);
      // Allow creation/update if owner and UID field matches
      allow create, update: if isOwner(userId) && 
                            request.resource.data.uid == userId;
      // Prevent deleting user profile for history/audit reasons
      allow delete: if false; 
    }

    // Private Subcollections (finance, tasks, health, etc.)
    match /users/{userId}/{subcollection}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // Family Groups (Root Collection) - Restricted to members
    match /family_groups/{groupId} {
      // Allow reading if you are a member of the group OR the owner
      allow read: if isAuthenticated() && (
        request.auth.uid in resource.data.members ||
        resource.data.ownerId == request.auth.uid
      );
      
      // Allow creation if you set yourself as owner AND you are in the members list
      allow create: if isAuthenticated() && 
                      request.resource.data.ownerId == request.auth.uid &&
                      request.auth.uid in request.resource.data.members;
      
      // Allow updates only by owner. Prevent changing ownerId.
      allow update: if isAuthenticated() && 
                      resource.data.ownerId == request.auth.uid &&
                      request.resource.data.ownerId == resource.data.ownerId;
                      
      // Allow deletion only by owner
      allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;

      // Subcollections under family groups (Ancestors, Shared Goals)
      match /{allSubcollections=**} {
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/family_groups/$(groupId)).data.members;
        allow write: if isAuthenticated() && request.auth.uid == get(/databases/$(database)/documents/family_groups/$(groupId)).data.ownerId;
      }
    }
    
    // Payments History (Root Collection)
    match /payments/{paymentId} {
      // Users can only see their own payment records
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Writing is typically handled by Backend (Firebase Admin SDK), so we keep it false for Frontend
      allow write: if false;
    }

    // Default deny for anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
