{
    "hosting": {
        "site": "aura-life-os",
        "public": "out",
        "cleanUrls": true,
        "trailingSlash": true,
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "/_next/static/**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            },
            {
                "source": "**/*.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    },
                    {
                        "key": "Cross-Origin-Opener-Policy",
                        "value": "same-origin-allow-popups"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/dashboard/__next.dashboard.__PAGE__.txt",
                "destination": "/dashboard/__next.dashboard/__PAGE__.txt"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    }
}